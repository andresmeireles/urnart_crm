{% extends "index.html.twig" %}
{% block title %}Editar usuarios{% endblock %}
{% block content %}
    <div class="col py-5 px-2">
        <div class="col"><h2>Editar usuarios</h2><hr></div>
        <div class="col">
            <div class="col">
                <div class="col-md-12 m-1">
                    <div class="card">
                        <div class="card-body row">
                            <div class="col-md-1 mx-1">
                                <i class="fas fa-lock fa-4x"></i>
                            </div>
                            <div class="col">
                                <h5 class="card-title">Permissões</h5>
                                <p class="card-text">Alterar permissões de usuario no sistema.</p>
                                <a class="card-link text-primary" href="/admin/user/permission">Alterar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="col-md-12 m-1">
                    <div class="card">
                        <div class="card-body row">
                            <div class="col-md-1 mx-1">
                                <i class="fas fa-user-plus fa-4x"></i>
                            </div>
                            <div class="col">
                                <h5 class="card-title">Cadastrar usuarios</h5>
                                <p class="card-text">Cadastrar usuarios no sistema.</p>
                                <a class="card-link text-primary" href="/admin/user/add">Cadastrar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}