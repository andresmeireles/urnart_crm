<div class="py-4 col-md-10 d-none" id="view{{product.getId}}">
        <div class="card">
            <div class="card-header">
                <div class="float-left">
                    Atualizar Produto
                    <h4>
                        <b>{{ product.nome }}</b>
                    </h4>
                </div>
                <div class="float-right">
                    <h4>Atualizado por:
                    </h4>
                    <h4>Em
                        {{ product.lastUpdate }}</h4>
                </div>
            </div>
            <div class="card-body fitable">
                <div class="card-text">
                    <div class="row">
                        <div class="col-md-8">
                            <fieldset class="border border-light">
                                <legend class="bg-light px-1">Informações Básicas</legend>
                                <div class="col-md-12 py-2">
                                    <div class="form-group">
                                        <label for="productName" class="required">Nome do produto</label>
                                        <p class="h4"><strong>{{ product.nome }}</strong></p>
                                    </div>
                                    <div class="form-group">
                                        <label for="description">Descrição</label>
                                        <p class="h4"><strong>{{ product.description }}</strong><p class="h4">
                                    </div>
                                    <div class="form-group">
                                        <label for="usedIn">Usado nos modelos</label>
                                    </div>
                                    <div class="form-group">
                                        <label for="mainVendor" class="required">Fornecedor Principal</label>
                                        <p class="h4"><strong>{{ product.mainVendor }}</strong></p>
                                    </div>
                                    <div class="form-group">
                                        <label for="otherVendors">Outros Fornecedores</label>
                                        <p class="h5">
                                        {% for ov in product.getOtherVendors %}
                                            <span class="badge badge-pill badge-light"><span class="mx-1">{{ ov }}</span></span>
                                        {% endfor %}
                                        </p>
                                    </div>
                                </div>

                            </fieldset>
                        </div>

                        <div class="col-md-4">
                            <fieldset class="border border-light">
                                <legend for="unitAndAmount" class="bg-light">UND e QNT</legend>
                                <div class="col-md-12 px-2">

                                    <div class="form-group">
                                        <label for="unit" class="required">Tipo de unidade</label>
                                        <p class="h4"><strong>{{ product.getUnit }}</strong></p>
                                    </div>

                                    <div class="form-group">
                                        <label for="departament" class="required">Departamento</label>
                                        <p class="h4"><strong>{{ product.getDepartament }}</strong></p>
                                    </div>

                                    <div class="form-group">
                                        <label for="maxStock" class="required">Estoque Maximo</label>
                                        <p class="h4"><strong>{{ product.maxStock }}</strong></p>
                                    </div>

                                    <div class="form-group">
                                        <label for="maxStock" class="required">Estoque Mínimo</label>
                                        <p class="h4"><strong>{{ product.minStock }}</strong></p>
                                    </div>

                                    <div class="form-group" id="periocid">
                                        <label for="periocid" class="required">Periocidade de Reabastecimento</label>
                                        <p class="h4"><strong>{{ product.periodicity }} dias</strong></p>
                                    </div>

                                </div>
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>