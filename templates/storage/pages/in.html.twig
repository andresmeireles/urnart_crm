<div class="d-none" id="in">
    <div class="col">
        <form>
        <div>
        <div class="row">
            <h2>Entrada de produtos</h2>
        </div>
        <div class="clearfix row">
            <div class="float-left col-md-3"><h4>Produtos</h4></div>
            <div class="float-right col-md-9 form-inline">
                <h4>
                    <div class="input-group">
                        <span class="mx-2">Data</span>
                    <div class="input-group-prepend">
                    <div class="input-group-text">
                        <input type="checkbox" target-attr="date" input="date" aria-label="Checkbox for the following text input">
                    </div>
                </div>
                    <input type="text" target="date" name="date" class="form-control date-mask" disabled value="{{"now"|date( "d/m/Y")}}">
                    </div>
                </h4>
            </div>
        </div>
        <div class="my-2">
                <input type="submit" class="btn btn-block btn-success" value="Enviar">
        </div>
        </div>
        <div class="form-inline my-1" cloneField="prod">
            <div class="col-md-12" clone-area>
                <div class="my-2 col-md-12" clone-field>
                    <input type="hidden" input-number='true' value="0">
                    <select name="prod[name]" class="form-control col-md-8 mx-1" id="produto">
                        <option value="" selected disabled>Nome do Produto</option>
                        {% for prod in prods %}
                            <option value="{{ prod.getId }}">{{ prod.nome }}</option>
                        {% endfor %}
                    </select>
                    <input type="text" class="form-control col-md-4 mx-1 numbers-only" id="amount" name="prod[amount]">
                    <button class="btn btn-primary fas fa-plus" mk-clone></button>
                    <button class="btn btn-danger fas fa-minus" rm-clone></button>
                </div>
            </div>
            <div class="col-md-12" clone-area>
                <div class="my-2 col-md-12" clone-field>
                    <input type="hidden" input-number='true' value="0">
                    <select name="prod[name]" class="form-control col-md-8 mx-1" id="produto">
                        <option value="" selected disabled>Nome do Produto</option>
                        {% for prod in prods %}
                        <option value="{{ prod.getId }}">{{ prod.nome }}</option>
                        {% endfor %}
                    </select>
                    <input type="text" class="form-control col-md-4 mx-1 numbers-only" id="amount" name="prod[amount]">
                    <button class="btn btn-primary fas fa-plus" mk-clone></button>
                    <button class="btn btn-danger fas fa-minus" rm-clone></button>
                </div>
            </div>
        </div>
        </form>
    </div>
</div>
