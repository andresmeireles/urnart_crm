{% extends 'index.html.twig' %}

{% block title %}Recibo{% endblock %}

{% block content %}
<div class="col">
        <div class="col-12" >
          <h1 class="display-3">Recibo</h1>
          <hr> </div>
        <div class="row">
          <div class="col">
            <form method="GET" action="/forms/{{ formName }}/print" target="_blank">
              <div class="row">
                <div class="col-md-8">
                  <input type="submit" class="btn btn-primary btn-block" id="send-form" value="Criar Recibo"> </div>
                  {% include 'components/csrfToken.html.twig' with { 'tokenText': 'form' } %}
                <div class="col-md-4">
                  <a class="btn btn-secondary btn-block" href="/forms/{{ formName }}">Novo</a>
                </div>
              </div>
              <div class="row py-2">
                <div class="col">
                  <fieldset class="border border-light">
                    <legend class="px-1 bg-light">Criar</legend>
                    <div class="row m-1">
                      <div class="col-md-12">
                        <div class="input-group w-100">
                          <div class="col-1">N°</div>
                          <div class="col">Cliente</div>
                          <div class="col-2">Cidade</div>
                          <div class="col-1">Estado</div>
                          <div class="col-2">Valor</div>
                          <div class="col-2">N° Pedido</div>
                          <div class="col-1">&nbsp;</div>
                        </div>
                        <div class="input-group my-1 w-100" id="cloneableField">
                          <div class="col-1">
                            <input type="hidden" input-number="true" input-name="cloneableField" value="1">
                            <input type="text" class="form-control my-1" id="number" name="cloneableField0[number]" placeholder="N°" required=""> </div>
                          <div class="col">
                            <input type="text" class="form-control my-1" id="clientName" name="cloneableField0[clientName]" placeholder="Nome" required=""> </div>
                          <div class="col-2">
                            <input type="text" class="form-control my-1" id="clientCity" name="cloneableField0[clientCity]" placeholder="Nome" required=""> </div>
                            <div class="col-1">
                            <input type="text" class="form-control my-1" id="clientState" name="cloneableField0[clientState]" placeholder="Estado" required="" size="2" maxlength="2"> </div>
                          <div class="col-2">
                            <div class="input-group my-1">
                              <div class="input-group-prepend">
                                <div class="input-group-text">R$</div>
                              </div>
                              <input type="text" class="form-control numbers-only money-mask" id="price" name="cloneableField0[price]" placeholder="Valor" required=""> </div>
                          </div>
                          <div class="col-2">
                            <input type="text" class="form-control my-1" id="orderNumber" name="cloneableField0[orderNumber]" placeholder="Numero" required=""> </div>
                          <button type="submit" class="btn btn-success" add-btn="true">
                            <span class="fas fa-fw fa-plus" add-btn="true"></span>
                          </button>
                          <button type="submit" class="btn mx-1 btn-danger" remove-btn="true">
                            <i class="fas fa-fw fa-times" remove-btn="true"></i>
                          </button>
                        </div>
                      </div>
                    </div>
                  </fieldset>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
{% endblock %}