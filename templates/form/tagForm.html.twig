{% extends 'index.html.twig' %}

{% block tittle %}Etiqetas Manual{% endblock %}

{% block content %}

  <div class="col">
  {% for message in app.flashes('message') %}
    <div class="alert alert-warning text-center" id="alert-rmv">
      <b>{{ message }}</b>
    </div>
  {% endfor %}

      <div class="row">
        <div class="col-md-12">
          <h1 class="display-3">Etiquetas</h1>
        </div>
      </div>
  <hr>

  <form method="POST" action="/form/{{ formName }}" target="_blank" >
    <div class="py-2">
        <div class="row">
          <div class="col-md-12">
            <input type="submit" class="btn btn-primary active btn-block btn-lg" value="Criar etiquetas">
          </div>
        </div>
    </div>
    <div class="py-3 text-center">
      <div class="container-fluid">
        <div class="row tag p-2">
          <div class="col-md-12 badge badge-light" id="tag">
            <div class="input-group my-1 w-100">
              <div class="col-md-5">
                <input type="hidden" id="tag-value">
                <input type="text" class="form-control mr-3 my-1 w-100" name="tag0[name]" id="name" placeholder="Nome" required></div>
                <div class="col-md-2">
                  <input class="form-control mr-3 my-1 w-100" name="tag0[city]" placeholder="Cidade" id="city"></div>
                  <div class="col-md-2">
                    <input type="number" class="form-control mr-3 my-1" name="tag0[amount]" placeholder="Quantidade" id="amount" required></div>
                    <div class="input-group-prepend col">
                      <div class="input-group-text">
                        <input type="hidden" value="0" id="checkValue" name="tag0[check]">
                        <input type="checkbox" aria-label="Checkbox for following text input" id="check">
                      </div>
                      <input type="text" class="form-control col" aria-label="Text input with checkbox" value="Casado?" disabled="">
                    </div>
                      <button type="btn" class="btn mx-1 btn-success" add-btn="true">
                        <i class="fas fa-fw fa-plus" add-btn="true"></i>
                      </button>
                      <button class="btn mx-1 btn-danger" remove-btn="true">
                        <i class="fas fa-fw fa-times" remove-btn="true"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </form>
          </div>
          {% endblock %}

          {% block customJS %}
            <script src="/assets/js/form/insertTag.js" type="text/javascript"></script>
          {% endblock %}
