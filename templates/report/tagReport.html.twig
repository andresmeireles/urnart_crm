{% extends 'headerTemplate.html.twig' %}

{% block body %}
  <div class="py-3">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h1 class="display-3">Etiquetas</h1>
        </div>
      </div>
    </div>
  </div>
  <hr>
  <div class="py-2">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <a class="btn btn-primary active btn-block btn-lg" href="#">Criar etiquetas</a>
        </div>
      </div>
    </div>
  </div>
  <div class="py-3 text-center">
    <div class="container-fluid">
      <div class="row tag p-2">
        <div class="col-md-12 badge badge-light">
          <div class="input-group my-1 w-100">
            <div class="col-md-5">
              <input type="hidden" id="tag-value">
              <input type="text" class="form-control mr-3 my-1 w-100" id="inlineFormInputGroup" placeholder="Nome"> </div>
            <div class="col-md-3">
              <input class="form-control mr-3 my-1 w-100" placeholder="Cidade" id="inlineFormInputGroup"> </div>
            <div class="col-md-2">
              <input type="text" class="form-control mr-3 my-1" placeholder="Quantidade" id="inlineFormInputGroup"> </div>
            <button class="btn mx-1 btn-success add-tag">
              <i class="fas fa-fw fa-plus"></i>
            </button>
            <button class="btn mx-1 btn-danger remove-tag">
              <i class="fas fa-fw fa-times"></i>
            </button>
            <div class="input-group-prepend">
              <div class="input-group-text">
                <input type="checkbox" aria-label="Checkbox for following text input" value="on"> </div>
            </div>
            <input type="text" class="form-control" aria-label="Text input with checkbox" value="Casado?" disabled=""> </div>
        </div>
        <div class="col-md-12 badge badge-light">
          <div class="input-group my-1 w-100">
            <div class="col-md-5">
              <input type="hidden" id="tag-value">
              <input type="text" class="form-control mr-3 my-1 w-100" id="inlineFormInputGroup" placeholder="Nome"> </div>
            <div class="col-md-3">
              <input class="form-control mr-3 my-1 w-100" placeholder="Cidade" id="inlineFormInputGroup"> </div>
            <div class="col-md-2">
              <input type="text" class="form-control mr-3 my-1" placeholder="Quantidade" id="inlineFormInputGroup"> </div>
            <button class="btn mx-1 btn-success add-tag">
              <i class="fas fa-fw fa-plus"></i>
            </button>
            <button class="btn mx-1 btn-danger remove-tag">
              <i class="fas fa-fw fa-times"></i>
            </button>
            <div class="input-group-prepend">
              <div class="input-group-text">
                <input type="checkbox" aria-label="Checkbox for following text input" value="on"> </div>
            </div>
            <input type="text" class="form-control" aria-label="Text input with checkbox" value="Casado?" disabled=""> </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block customJS %}
<script src="/assets/js/report/insertTag.js" type="text/javascript"></script>
{% endblock %}