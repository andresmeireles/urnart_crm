{% extends "index.html.twig" %}
{% block title %}Produção.{% endblock %}
{% block content %}
{% set obj = {
    id: 'production-report-side-bar',
    metalink: 'report',
    pageType: 'productionCount',
    listItens: [
        {
            link: 'add',
            class: 'add-production',
            text: 'Adicionar produção'
        },
        {
            link: 'make-report',
            class: 'make-report-by-date',
            text: 'Criar relatório de produção'
        },
        {
            link: 'check-all-entries',
            class: '',
            text: 'Ver todas as entradas'
        }
    ]
} %}
{% include "components/simpleBar.html.twig" with obj %}
<div class="col p-3" id="addProdCount">
    <div class="col">
        <h2>Relatorios</h2>
        <hr>
    </div>
    <div class="col">
        to do => fazer os belos relatorios de produção :)
    </div>
    <div class="col">
        <div class="col">
            <form action="" method="post">
                <div class="input-group my-1 w-100" id="cloneableField">
                    <input type="hidden" input-number='true' input-name="[nomeDoInput]" value="0" />
                    <div class="form-group col" input-name="">
                        <label for="prodName" no-clone>Nome da urna</label>
                        <input type="text" class="form-control" name="name" />
                    </div>
                    <div class="form-group col" input-name="">
                        <label for="prodName" no-clone>Nome da urna</label>
                        <input type="text" class="form-control numbers-only" name="amount" />
                    </div>
                    <button type="submit" class="btn btn-success my-3 py-2" add-btn="true">
                        <span class="fas fa-fw fa-plus" add-btn="true"></span>
                    </button>
                    <button type="submit" class="btn mx-1 btn-danger my-3 py-2" remove-btn="true">
                        <i class="fas fa-fw fa-times" remove-btn="true"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}