{% extends 'index.html.twig' %}

{% block content %}
    <script>
        function reset(el) {
            el.preventDefault()
            simpleDialog('Deseja resetar a imagem?', function () {
                return true;
            })
        }
    </script>
    {% include '/components/notification.html.twig' %}
    <div class="px-4 py-3 col-md-12" type="config">
        <div class="clearfix">
            <h1>Configurações</h1>
        </div>
        <form method="post" action="/register/configuration" enctype="multipart/form-data">
            <div class="row" id='conf'>
                <div class="bg-light col-md-12">
                    <fieldset>
                        <legend>Maque ou desmarque as opções</legend>
                    </fieldset>
                </div>
                <div class="p-2 col-md-12 row">
                    <div class="col-md-6">
                        <div class="bg-light col-md-12">
                            <fieldset>
                                <legend>Geral</legend>
                            </fieldset>
                        </div>
                        <div class="p-2 border border-light">
                            {% for key, value in draw.check %}
                                <div class="form-check">
                                    <input type="hidden" class="form-check-input"
                                           name="check[{{ value.name }}]" value="off">
                                    <input type="checkbox" class="form-check-input"
                                           name="check[{{ value.name }}]" value="on" {{ config[value.name] ? 'checked' : '' }}>
                                    <label for="{{ key }}">
                                        {{ value.label }} <span class="mx-1 badge badge-pill badge-warning"
                                                                data-balloon="{{ value.tooltip }}"
                                                                data-balloon-pos="up"><i
                                                    class="fas fa-question"></i></span>
                                    </label>
                                </div>
                                <hr>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="bg-light col-md-12">
                            <fieldset>
                                <legend>Carregar Imagens</legend>
                            </fieldset>
                        </div>
                        <div class="border border-light">
                            <small class="p-1">* Formatos suportados jpg e png</small><br>
                            <small class="p-1">* Imagens devem ter no maximo 4mb</small>
                            {% for key, value in draw.images %}
                                <div class="p-1">
                                    <label for="{{ key }}">
                                        {{ value.label }} <span class="mx-1 badge badge-pill badge-warning"
                                                                data-balloon="{{ value.tooltip is defined ? value.tooltip : '' }}"
                                                                data-balloon-pos="up"><i
                                                    class="fas fa-question"></i></span>
                                    </label>
                                    <div class="col-md-6">
                                        <img src="{{ asset(config[value.name] is defined ? config[value.name] : '') }}" class="img-fluid img-thumbnail" alt="{{ value.alt is defined ? value.alt : '' }}">
                                    </div>
                                    <div class="input-group mb-3 my-2">
                                        <div class="custom-file">
                                            <input type="hidden" name="images[{{ value.name }}]" value="null">
                                            <input type="file" id="file" class="custom-file-input" name="images[{{ value.name }}]">
                                            <label class="custom-file-label" for="customFile" aria-describedby="file">Selecione um arquivo</label>
                                        </div>
                                        <div class="input-group-append">
                                            <a href="/resetlogo" class="input-group-text bg-warning" id="reset" onclick="reset()">Resetar</a>
                                        </div>
                                    </div>
                                    <hr>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="input-group">
                <input type="hidden" name="token" value="{{ csrf_token('token') }}" />
                <input type="submit" class="btn btn-success" value="Salvar">
            </div>
        </form>
    </div>
{% endblock %}