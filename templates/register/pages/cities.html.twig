<div id="municipio" class="d-none">

    <div class="card text-center my-2">
        <div class="card-header text-center">
            <ul class="nav nav-pills card-header-pills">
                <li class="nav-item text-center">
                    <h3>Municipios</h3>
                </li>
                {#<li class="nav-item mx-5">
                    &nbsp;
                    <button data-action="add-unit" class="btn btn-primary">Adicionar</button>
                </li>
                <li class="nav-item mx-2">
                    <button id="municipio-reload" class="btn reload">
                        <i class="fas fa-sync reload"></i>
                    </button>
                </li>#}
            </ul>
        </div>
        <div class="card-body" data-name="municipio" style="height: 600px; width: 600px">
            <div class="fitable">
                <table class="table table-hover tablesorter sortable" name="municipio">
                    <thead class="table-primary">
                        <tr class="text-center">
                            <th colspan="2">Municipios</th>
                            <th>UF</th>
                        </tr>
                    </thead>
                    <tbody id="municipio-body" style="overflow-y: scroll">
                        {% for item in city %}
                            <tr>
                                <td class="d-none id-number">
                                    {{ item.id }}
                                </td>
                                <td colspan="2" class="text-center" name="{{ item.nome }}">
                                    {{ item.nome }}
                                </td>
                                <td class="text-left" name="{{ item.uf }}">
                                    {{ item.uf }}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>