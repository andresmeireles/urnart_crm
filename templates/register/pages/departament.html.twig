<div id="departament" style="display:none">
	
	<div class="card text-center my-2">
		<div class="card-header" data-name="departament">
			<ul class="nav nav-pills card-header-pills">
				<li class="nav-item">
					<h4>Departamentos</h4>
				</li>
				<li class="nav-item mx-5">
					<button href="javascript:;" data-fancybox data-src="#add-departament" class="btn btn-primary">Adicionar</button>
				</li>
				<li class="nav-item mx-2">
					<button id="departament-reload" class="btn reload"><i class="fas fa-sync reload"></i></button>
				</li>
			</ul>
		</div>
		<div class="card-body" data-name="departament">
			<table class="table table-hover tablesorter sortable" name="departamento">
				<thead class="table-primary">
					<tr>
						<th colspan="2">Nome departamento</th>
					</tr>
				</thead>
				<tbody id="departament-body">
					{% for dpto in dptos %}	
					<tr>
						<td class="d-none id-number">
							{{ dpto.id }}
						</td>
						<td class="text-left" name="{{ dpto.name }}">
							{{ dpto.name | capitalize }}
						</td>
						<td class="text-right">
							<span class="badge badge-pill badge-danger remover cursor-decoration">Remover</span>
						</td>
					</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

</div>

<div id="add-departament" style="display:none">
	
	<div class="card text-center my-2">
		<div class="card-header">
			<form method="post" action="register/add/departament" id="add-depto-form" target="departament">
				<div class="form-group">
					<input type="text" name="name" class="form-control" placeholder="Nome Departamento">
				</div>
				<button class="btn btn-primary sender" data-sender="register/add/departament" method="post" token="{{ csrf_token('token') }}">Cadastrar</button>
			</form>
		</div>
	</div>
</div>
