<div id="departament" class="d-none">
	
	<div class="card text-center my-2">
		<div class="card-header">
			<ul class="nav nav-pills card-header-pills">
				<li class="nav-item">
					<h4>Departamentos</h4>
				</li>
				<li class="nav-item mx-5">
					<button data-action="add-departament" class="btn btn-primary">Adicionar</button>
				</li>
			</ul>
		</div>
		<div class="card-body">
			<table class="table table-hover tablesorter sortable">
				<thead class="table-primary">
					<tr>
						<th colspan="2">Nome departamento</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td class="text-left">
							Ovo
						</td>
						<td class="text-right">
							<span class="badge badge-pill badge-danger">Remover</span>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>

</div>

<div id="add-departament" class="d-none">
	
	<div class="card text-center my-2">
		<div class="card-header">
			<form method="post" action="register/add/departament" id="add-depto-form">
				<div class="form-group">
					<input type="text" name="departament" class="form-control" placeholder="Nome Departamento">
				</div>
				<button class="btn btn-primary sender" data-sender="register/add/departament">Cadastrar</button>
			</form>
		</div>
	</div>
</div>