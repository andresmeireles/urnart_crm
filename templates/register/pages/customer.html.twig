<div id="unit" class="d-none">
	
	<div class="card text-center my-2">
		<div class="card-header">
			<ul class="nav nav-pills card-header-pills">
				<li class="nav-item">
					<h4>Unidades</h4>
				</li>
				<li class="nav-item mx-5">
					<button data-action="add-unit" class="btn btn-primary">Adicionar</button>
				</li>
				<li class="nav-item mx-2">
					<button id="unit-reload" class="btn reload"><i class="fas fa-sync reload"></i></button>
				</li>
			</ul>
		</div>
		<div class="card-body" data-name="unit">
			<table class="table table-hover tablesorter sortable" name="unidades">
				<thead class="table-primary">
					<tr>
						<th colspan="3">Unidades</th>
					</tr>
				</thead>
				<tbody id="unit-body">
					{% for item in customer %}	
					<tr>
						<td class="d-none id-number">
							{{ item.id }}
						</td>
						<td class="text-left" name="{{ item.name }}">
							{{ item.name }}
						</td>
						<td class="text-left" name="{{ item.cnpj }}">
							{{ item.name }}
						</td>
						<td class="text-left" name="{{ item.city }}">
							{{ item.name }}
						</td>
						<td class="text-left" name="{{ item.state }}">
							{{ item.name }}
						</td>
						<td class="text-right">
                            <span class="badge badge-pill badge-secondary remover cursor-decoration">Remover</span>
							<span class="badge badge-pill badge-danger remover cursor-decoration">Remover</span>
						</td>
					</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

</div>